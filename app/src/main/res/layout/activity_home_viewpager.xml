<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dashboard_background"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">
        <TextView
            android:id="@+id/shayariTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Love Shayari"
            android:textColor="@color/colorBackground"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:typeface="serif"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/shayari_pagination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBackground"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:typeface="serif"
            android:text="  [0/0]"
            android:textStyle="italic"/>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/viewpager"
        android:layout_weight=".1"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:id="@+id/left_item_imageview"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:src="@drawable/blue_left_pointing" />

        <ImageView
            android:id="@+id/refresh_item_imageview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/refresh_icon" />

        <ImageView
            android:id="@+id/right_item_imageview"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/blue_right_pointing" />
    </RelativeLayout>


</LinearLayout>
